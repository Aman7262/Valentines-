<script>
function copyLink() {
    navigator.clipboard.writeText(window.location.href);
    alert("Link copied!");
}

function shareCard() {
    if (navigator.share) {
        navigator.share({
            title: "Digital Bouquet",
            text: "I made this bouquet for you ğŸŒ¸",
            url: window.location.href
        });
    } else {
        alert("Sharing not supported on this device.");
    }
}
</script>

